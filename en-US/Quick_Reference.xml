  <bridgehead id="brid-Quick_Reference-Theme">
    Creating a New Theme
  </bridgehead>
  <table id="tabl-Quick_Reference-Placeholders">
    <title>List of Available Theme File Placeholders</title>
    <tgroup cols="2">
      <colspec colname="form" />
      <colspec colname="description" />
      <thead>
        <row>
          <entry>
            Form
          </entry>
          <entry>
            Description
          </entry>
        </row>
      </thead>
      <tbody>
        <row>
          <entry>
            <command>&lt;!-- START-DOCUMENT --&gt;</command>
          </entry>
          <entry>
