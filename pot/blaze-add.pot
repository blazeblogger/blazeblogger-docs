#. Tag: title
#, no-c-format
msgid "Description"
msgstr ""

#. Tag: para
#, no-c-format
msgid "<command>blaze-add</command> adds a blog post or a page to the &PRODUCT; repository. If a <replaceable>file</replaceable> is supplied, it adds the content of that file, otherwise an external text editor is opened for you. Note that there are several special forms and placeholders that can be used in the text, and that will be replaced with a proper data when the blog is generated."
msgstr ""

#. Tag: title
#, no-c-format
msgid "Special Forms"
msgstr ""

#. Tag: term
#, no-c-format
msgid "<command>&lt;!-- break --&gt;</command>"
msgstr ""

#. Tag: para
#, no-c-format
msgid "A mark to delimit a blog post synopsis."
msgstr ""

#. Tag: title
#, no-c-format
msgid "Placeholders"
msgstr ""

#. Tag: term
#, no-c-format
msgid "<command>%root%</command>"
msgstr ""

#. Tag: para
#, no-c-format
msgid "A relative path to the root directory of the blog."
msgstr ""

#. Tag: term
#, no-c-format
msgid "<command>%home%</command>"
msgstr ""

#. Tag: para
#, no-c-format
msgid "A relative path to the index page of the blog."
msgstr ""

#. Tag: term
#, no-c-format
msgid "<command>%page[<replaceable>id</replaceable>]%</command>"
msgstr ""

#. Tag: para
#, no-c-format
msgid "A relative path to a page with the supplied <replaceable>id</replaceable>."
msgstr ""

#. Tag: term
#, no-c-format
msgid "<command>%post[<replaceable>id</replaceable>]%</command>"
msgstr ""

#. Tag: para
#, no-c-format
msgid "A relative path to a blog post with the supplied <replaceable>id</replaceable>."
msgstr ""

#. Tag: term
#, no-c-format
msgid "<command>%tag[<replaceable>name</replaceable>]%</command>"
msgstr ""

#. Tag: para
#, no-c-format
msgid "A relative path to a tag with the supplied <replaceable>name</replaceable>."
msgstr ""

#. Tag: title
#, no-c-format
msgid "Options"
msgstr ""

#. Tag: term
#, no-c-format
msgid "<option>-b</option> <replaceable>directory</replaceable>, <option>--blogdir</option> <replaceable>directory</replaceable>"
msgstr ""

#. Tag: para
#, no-c-format
msgid "Allows you to specify a <replaceable>directory</replaceable> in which the &PRODUCT; repository is placed. The default option is a current working directory."
msgstr ""

#. Tag: term
#, no-c-format
msgid "<option>-E</option> <replaceable>editor</replaceable>, <option>--editor</option> <replaceable>editor</replaceable>"
msgstr ""

#. Tag: para
#, no-c-format
msgid "Allows you to specify an external text <replaceable>editor</replaceable>. When supplied, this option overrides the relevant configuration option."
msgstr ""

#. Tag: term
#, no-c-format
msgid "<option>-t</option> <replaceable>title</replaceable>, <option>--title</option> <replaceable>title</replaceable>"
msgstr ""

#. Tag: para
#, no-c-format
msgid "Allows you to specify the <replaceable>title</replaceable> of a blog post or page."
msgstr ""

#. Tag: term
#, no-c-format
msgid "<option>-a</option> <replaceable>author</replaceable>, <option>--author</option> <replaceable>author</replaceable>"
msgstr ""

#. Tag: para
#, no-c-format
msgid "Allows you to specify the <replaceable>author</replaceable> of a blog post or page."
msgstr ""

#. Tag: term
#, no-c-format
msgid "<option>-d</option> <replaceable>date</replaceable>, <option>--date</option> <replaceable>date</replaceable>"
msgstr ""

#. Tag: para
#, no-c-format
msgid "Allows you to specify the <replaceable>date</replaceable> of publishing of a blog post or page."
msgstr ""

#. Tag: term
#, no-c-format
msgid "<option>-k</option> <replaceable>keywords</replaceable>, <option>--keywords</option> <replaceable>keywords</replaceable>"
msgstr ""

#. Tag: para
#, no-c-format
msgid "Allows you to specify a comma-separated list of <replaceable>keywords</replaceable> attached to a blog post or page."
msgstr ""

#. Tag: term
#, no-c-format
msgid "<option>-T</option> <replaceable>tags</replaceable>, <option>--tags</option> <replaceable>tags</replaceable>"
msgstr ""

#. Tag: para
#, no-c-format
msgid "Allows you to supply a comma-separated list of <replaceable>tags</replaceable> attached to a blog post."
msgstr ""

#. Tag: term
#, no-c-format
msgid "<option>-u</option> <replaceable>url</replaceable>, <option>--url</option> <replaceable>url</replaceable>"
msgstr ""

#. Tag: para
#, no-c-format
msgid "Allows you to specify the <replaceable>url</replaceable> of a blog post or page. Allowed characters are letters, numbers, hyphens, and underscores."
msgstr ""

#. Tag: term
#, no-c-format
msgid "<option>-p</option>, <option>--page</option>, <option>--pages</option>"
msgstr ""

#. Tag: para
#, no-c-format
msgid "Tells <command>blaze-add</command> to add a page or pages."
msgstr ""

#. Tag: term
#, no-c-format
msgid "<option>-P</option>, <option>--post</option>, <option>--posts</option>"
msgstr ""

#. Tag: para
#, no-c-format
msgid "Tells <command>blaze-add</command> to add a blog post or blog posts. This is the default option."
msgstr ""

#. Tag: term
#, no-c-format
msgid "<option>-C</option>, <option>--no-processor</option>"
msgstr ""

#. Tag: para
#, no-c-format
msgid "Disables processing a blog post or page with an external application. For example, if you use <application>Markdown</application> to convert the lightweight markup language to the valid HTML output, this will enable you to write this particular post in plain HTML directly."
msgstr ""

#. Tag: term
#, no-c-format
msgid "<option>-q</option>, <option>--quiet</option>"
msgstr ""

#. Tag: para
#, no-c-format
msgid "Disables displaying of unnecessary messages."
msgstr ""

#. Tag: term
#, no-c-format
msgid "<option>-V</option>, <option>--verbose</option>"
msgstr ""

#. Tag: para
#, no-c-format
msgid "Enables displaying of all messages. This is the default option."
msgstr ""

#. Tag: term
#, no-c-format
msgid "<command>-h</command>, <command>--help</command>"
msgstr ""

#. Tag: para
#, no-c-format
msgid "Displays usage information and exits."
msgstr ""

#. Tag: term
#, no-c-format
msgid "<command>-v</command>, <command>--version</command>"
msgstr ""

#. Tag: para
#, no-c-format
msgid "Displays version information and exits."
msgstr ""

#. Tag: title
#, no-c-format
msgid "Environment Variables"
msgstr ""

#. Tag: term
#, no-c-format
msgid "<envar>EDITOR</envar>"
msgstr ""

#. Tag: para
#, no-c-format
msgid "Unless the <option>core.editor</option> option is set, <command>blaze-add</command> tries to use system-wide settings to decide which editor to use."
msgstr ""

#. Tag: title
#, no-c-format
msgid "Example Usage"
msgstr ""

#. Tag: para
#, no-c-format
msgid "Write a new blog post in an external text editor:"
msgstr ""

#. Tag: screen
#, no-c-format
msgid "~]$ <command>blaze-add</command>"
msgstr ""

#. Tag: para
#, no-c-format
msgid "Add a new blog post from a file:"
msgstr ""

#. Tag: screen
#, no-c-format
msgid "~]$ <command>blaze-add new_packages.txt</command>\n"
"Successfully added the post with ID 10."
msgstr ""

#. Tag: para
#, no-c-format
msgid "Write a new page in an external text editor:"
msgstr ""

#. Tag: screen
#, no-c-format
msgid "~]$ <command>blaze-add -p</command>"
msgstr ""

#. Tag: para
#, no-c-format
msgid "Write a new page in <application>nano</application>:"
msgstr ""

#. Tag: screen
#, no-c-format
msgid "~]$ <command>blaze-add -p -E nano</command>"
msgstr ""

